<UserControl
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
               xmlns:metro="http://schemas.codeplex.com/elysium"
      xmlns:params="http://schemas.codeplex.com/elysium/params" x:Class="PageFriends"
      d:DesignHeight="600"
      d:DesignWidth="500"
      mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>        

        <TextBox x:Name="TextBox1" Grid.Column="0" VerticalAlignment="Top" Background="Transparent" BorderBrush="{x:Static metro:Manager.DefaultAccentBrush}" Foreground="{x:Static metro:Manager.DefaultContrastBrush}" Height="22" BorderThickness="1" Text="Friends"/>
    </Grid>
</UserControl>