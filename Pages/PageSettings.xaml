<UserControl
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      xmlns:metro="http://schemas.codeplex.com/elysium"
      xmlns:params="http://schemas.codeplex.com/elysium/params"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="PageSettings"
      d:DesignHeight="600"
      d:DesignWidth="500"
      mc:Ignorable="d" Background="{DynamicResource SemitransparentBrush}" >

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Background="{x:Null}">
            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="ComboBox_SelectionChanged" x:Name="ThemeName">
                <ComboBoxItem>Dark</ComboBoxItem>
                <ComboBoxItem>Light</ComboBoxItem>
            </ComboBox>
            <!-- <ItemsControl x:Name="FriendsView" ItemsPanel="{DynamicResource FriendsItemsPanel}" ItemTemplate="{StaticResource FriendDataTemplate}"/>-->
        </ScrollViewer>
        <ListBox Grid.Column="1" Background="{x:Null}">
            <ListBoxItem Content="111"/>
        </ListBox>
    </Grid>
</UserControl>