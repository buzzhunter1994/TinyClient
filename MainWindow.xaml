<metro:Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:metro="http://schemas.codeplex.com/elysium"
    xmlns:params="http://schemas.codeplex.com/elysium/params"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
    xmlns:mui ="http://firstfloorsoftware.com/ModernUI"
    params:Manager.Theme="Dark"
    params:Manager.AccentBrush="#FF1D569B"
    params:Manager.ContrastBrush="#FFEDF5F5"
    x:Class="TinyClient.MainWindow"
    mc:Ignorable="d" 
    Background="{DynamicResource BackgroundBrush}" Width="450" MinWidth="450" Height="600" Title="TinyClient">
    <metro:Window.TitleBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Grid.Column="1" Content="Аудио" Style="{DynamicResource {x:Static metro:Window.DefaultCaptionButtonStyleKey}}" Click="AudioLoad"/>
                <Button Grid.Column="1" Content="Друзья" Style="{DynamicResource {x:Static metro:Window.DefaultCaptionButtonStyleKey}}" Click="FriendsLoad"/>
                <Button Grid.Column="1" Content="Новости" Style="{DynamicResource {x:Static metro:Window.DefaultCaptionButtonStyleKey}}"/>
            </StackPanel>
        </Grid>
    </metro:Window.TitleBar>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Bg" Source="Backgrounds/14.jpg" Stretch="UniformToFill" Opacity="0.45" d:IsLocked="True"/>
        <ContentControl x:Name="Content" Content="{Binding}" ContentTemplate="{DynamicResource ContentView}"/>
    </Grid>
    <metro:Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </metro:Window.Resources> 
    
</metro:Window>
