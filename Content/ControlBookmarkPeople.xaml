<UserControl x:Class="ControlBookmarkPeople"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:metro="http://schemas.codeplex.com/elysium"
             xmlns:local="clr-namespace:TinyClient"             
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer Background="{x:Null}">
            <ItemsControl x:Name="PeopleView" ItemsPanel="{DynamicResource UsersItemsPanel}" ItemTemplate="{StaticResource BookmarkPeopleDataTemplate}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
